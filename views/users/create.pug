extends ../layouts/common.pug
block content
    div(class="container")
        h1 Create User
        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/users/create", method="POST")
            Label name
                input(type="text", name="name" class="form-control", value = values ? values.name : "")
            Label Phone
                input(type="text", name="phone" class="form-control", value = values ? values.phone : "")
            Button(class="btn btn-primary") ADD
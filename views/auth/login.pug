extends ../layouts/common.pug
block content
    div(class="container")
        h1 Login
        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="", method="POST")
            Label(for="name") email
            input(type="text", name="email" class="form-control", value = values ? values.name : "")
            Label(name="phone") pass
            input(type="text", name="pass" class="form-control", value = values ? values.phone : "")
            Button(class="btn btn-primary") Login
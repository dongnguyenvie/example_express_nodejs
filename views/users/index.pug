extends ../layouts/common.pug
block content
    div(class="container")
        h1 user
        a(href="/users/create") New
        form(action="/users/search", Method="GET", class="d-flex")
            input(type=text, name="q", value=key, class="form-control")
            button(class="btn btn-primary ml-2") Search
        table
            tbody
                tr
                    th Name
                    th Phone
                    th View
                each us in user
                    tr
                        td= us.name
                        td= us.phone
                        td
                            a(href="/users/" + us.id) View
